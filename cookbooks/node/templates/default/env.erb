export application="<%= @app_name %>"
export APP_NAME=${application}
export shared_path="/data/${application}/shared"
export current_path="/data/${application}/current"
export APP_USER="<%= @user %>"
export NODE_ENV="<%= @framework_env %>"
export FRAMEWORK_ENV="<%= @framework_env %>"
export PORT="<%= @port %>"
export DB_USER="<%= @db_user %>"
export DB_PASSWORD="<%= @db_password %>"
export DB_HOST="<%= @db_host %>"
<% unless @db_slaves.empty? %>
export DB_SLAVES="<%= @db_slaves %>"
<% end %>
export DB_MASTER="<%= @db_host %>"
